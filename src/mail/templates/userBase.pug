-function currentYear(){
    -return new Date().getFullYear();
-} 

link(rel="stylesheet", href=`${apiUrl}/styles/base.css`)

table.mail
    tr
        th
            img.logo(src=`${apiUrl}/assets/logo.png`, alt="logo" title="logo")
    tr
        td.title
            block title
    tr
        td.content
            block content
    tr
        td.action
            block action
    tr
        td.footer-links
            a.footer-link.footer-link--web(href='https://dreader.io/links')
                img(src=`${apiUrl}/assets/web.png`, alt="web" title="dReader web")
            a.footer-link.footer-link--discord(href='https://discord.gg/rrZsRvC9mh')
                img(src=`${apiUrl}/assets/discord.png`, alt="discord" title="dReader discord invite")
            a.footer-link.footer-link--twitter(href='https://x.com/dReaderApp')
                img(src=`${apiUrl}/assets/twitter.png`, alt="twitter" title="dReader twitter account")
            a.footer-link.footer-link--mail(href='mailto:support@dreader.io')
                img(src=`${apiUrl}/assets/email.png`, alt="email" title="dReader email contact")
    tr
        td
            p.copyright Copyright &copy; #{currentYear()} dReader d.o.o. All rights reserved
            p.privacy-policy View our 
                a.privacy-policy-link(href='https://dreader.app/privacy-policy') Privacy Policy
            p.nota-bene This email contains important information about your dReader account and cannot be unsubscribed from.
